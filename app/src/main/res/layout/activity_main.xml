<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오델로"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 : 1 대전"
        android:id="@+id/btnVsPerson"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnVsComputer"
        android:layout_alignStart="@+id/btnVsComputer"
        android:layout_alignRight="@+id/btnVsComputer"
        android:layout_alignEnd="@+id/btnVsComputer"
        android:onClick="onVsButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컴퓨터 대전"
        android:id="@+id/btnVsComputer"
        android:textSize="40dp"
        android:layout_below="@+id/btnVsPerson"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="onVsButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루투스대전"
        android:id="@+id/btnVsBluetooth"
        android:textSize="40dp"
        android:onClick="onVsButtonClicked"
        android:layout_below="@+id/btnVsComputer"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
