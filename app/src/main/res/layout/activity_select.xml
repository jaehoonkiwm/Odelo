<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iao.odelo.SelectActivity">

    <TextView android:text="바둑판 선택" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 x 4"
        android:id="@+id/btnByFour"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:onClick="onArrButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 x 8"
        android:id="@+id/btnByEight"
        android:layout_below="@+id/btnByFour"
        android:layout_alignLeft="@+id/btnByFour"
        android:layout_alignStart="@+id/btnByFour"
        android:textSize="40dp"
        android:onClick="onArrButtonClicked" />

</RelativeLayout>
